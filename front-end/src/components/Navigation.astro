---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Inicio' },
  { href: '/servicios', label: 'Servicios' },
  { href: '/sobre-nosotros', label: 'Sobre Nosotros' },
  { href: '/reservar', label: 'Reservar', highlight: true },
];
---

<nav class="border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center gap-8">
        <a href="/" class="flex items-center gap-2">
          <div class="h-8 w-8 rounded-lg bg-primary flex items-center justify-center text-primary-foreground font-bold">
            R
          </div>
          <span class="font-bold text-lg hidden sm:inline-block">ReservaFÃ¡cil</span>
        </a>

        <ul class="hidden md:flex items-center gap-6">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={[
                  "text-sm font-medium transition-colors hover:text-primary",
                  currentPath === item.href ? "text-foreground" : "text-muted-foreground",
                  item.highlight && "hidden"
                ]}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="flex items-center gap-4">
        <a
          href="/reservar"
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2"
        >
          Reservar Ahora
        </a>

        <button id="mobile-menu-button" class="md:hidden inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring h-10 w-10 hover:bg-accent">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="4" x2="20" y1="12" y2="12"></line>
            <line x1="4" x2="20" y1="6" y2="6"></line>
            <line x1="4" x2="20" y1="18" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <ul class="flex flex-col gap-3">
        {navItems.filter(item => !item.highlight).map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                "block text-sm font-medium transition-colors hover:text-primary py-2",
                currentPath === item.href ? "text-foreground" : "text-muted-foreground"
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
